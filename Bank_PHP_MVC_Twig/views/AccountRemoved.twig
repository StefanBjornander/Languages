{% block account_removed %}
  <h1>Account Removed</h1>

  {% if (accountBalance == 0) %}
    <p>Account number {{accountNumber}}, owned by {{customerName}}
       with number {{customerNumber}}, has been removed.</p>
  {% else %}
    <p>Account number {{accountNumber}}, owned by {{customerName}} with customer
       number {{customerNumber}}, cound not be removed since its account balance
       does not equal zero (the account balance equals {{accountBalance}} kr).</p>
  {% endif %}

  <form method='post' action='/'>
    <input type='submit' value='Ok'>
  </form>
{% endblock %}