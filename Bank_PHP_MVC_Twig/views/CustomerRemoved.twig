{% block customer_removed %}
  <h1>Customer Removed</h1>

  {% if (numberOfAccounts == 0) %}
    <p>Customer {{customerName}} with number {{customerNumber}} has been removed.</p>
  {% else %}
    <p>Customer {{customerName}} with number {{customerNumber}}
       cannot be removed since they own {{numberOfAccounts}} accounts.</p>
  {% endif %}
  
  <form method='post' action='/'>
    <input type='submit' value='Ok'>
  </form>
{% endblock %}