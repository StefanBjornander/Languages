{% block carAdded %}
  <h1>Car Added</h1>

  {% if ok %}
    <p>A {{color}} {{make}} from {{year}} with registration number {{registration}} has been added.</p>
  {% else %}
    <p>A car with registration number {{registration}} does already exist.</p>
  {% endif %}

  <form method="post" action="/carList">
    <input type="submit" style="width:20mm" value="Ok" autofocus>
  </form>
{% endblock %}