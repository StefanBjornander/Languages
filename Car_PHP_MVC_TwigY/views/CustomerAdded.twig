{% block customerAdded %}
  <h1>Customer Added</h1>

  {% if ok %}
    <p>{{name}}, living at {{address}}, {{postal}}, with person number {{person}} and phone number {{phone}}, has been added.</p>
  {% else %}
    <p>A customer with person number {{person}} does already exist.</p>
  {% endif %}

  <form method="post" action="/customerList">
    <input type="submit" style="width:20mm" value="Ok" autofocus>
  </form>
{% endblock %}